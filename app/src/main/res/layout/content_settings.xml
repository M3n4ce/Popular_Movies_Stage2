<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
       app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_settings"
    tools:context="com.manish.nanoapp.popularmovies.Settings"
    android:orientation="vertical">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_sort_pop"
        android:id="@+id/btnPop"
        android:layout_gravity="center_horizontal"
        android:onClick="CatPopularity" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_sort_favorites"
        android:id="@+id/btnFavorites"
        android:layout_gravity="center_horizontal"
        android:onClick="sortFavorites"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_sort_rating"
        android:id="@+id/btnRating"
        android:layout_gravity="center_horizontal"
        android:onClick="CatHighestRated" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_reset_favorites"
        android:id="@+id/btnResetFavorites"
        android:layout_gravity="center_horizontal"
        android:onClick="ResetFavorites"/>

</LinearLayout>
